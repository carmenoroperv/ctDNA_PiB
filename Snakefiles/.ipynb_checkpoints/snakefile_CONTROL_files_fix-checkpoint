output_controls_normalized_final = "data/all_samples_normalized_CONTROLS.csv"
output_controls_normalized_smoothed_final = "data/all_samples_normalized_gaussian_smooth_CONTROLS.csv"

rule all: 
	input: output_controls_normalized_final, output_controls_normalized_smoothed_final


rule controls_normalized:
	input: 
		input_samples = "data/sample_types.txt",
		input_data = "data/all_samples_normalized.csv"
	output: 
		output_controls_normalized = "data/all_samples_normalized_CONTROLS.csv"
	conda:
		"conda_envs/ctDNA.yml"
	notebook:
		"Notebooks for data prep, formatting, normalizing/Splitting_controls_from_all_sample_normalized.r.ipynb"


rule controls_normalized_gaussian:
	input: 
		input_samples = "data/sample_types.txt",
		input_data = "data/all_samples_normalized_gaussian_smooth.csv"
	output:
		output_controls_normalized_smoothed = "data/all_samples_normalized_gaussian_smooth_CONTROLS.csv"
	conda:
		"conda_envs/ctDNA.yml"
	notebook:
		"Notebooks for data prep, formatting, normalizing/Splitting_controls_from_all_samples_smooth_gaussian.r.ipynb"
